{
  "name": "skillset1",
  "description": "Skillset to reshape data and store in Knowledge Store",
  "skills": [
    {
      "@odata.type": "#Microsoft.Skills.Util.ShaperSkill",
      "name": "reshape-data",
      "description": "Reshape fields for storage",
      "context": "/document",
      "inputs": [
        {
          "name": "url",
          "source": "/document/url"
        },
        {
          "name": "sentiment",
          "source": "/document/sentiment"
        },
        {
          "name": "key_phrases",
          "source": null,
          "sourceContext": "/document/merged_content/keyphrases/*",
          "inputs": [
            {
              "name": "phrase",
              "source": "/document/merged_content/keyphrases/*"
            }
          ]
        }
      ],
      "outputs": [
        {
          "name": "output",
          "targetName": "reshapedData"
        }
      ]
    }
  ],
  "knowledgeStore": {
    "storageConnectionString": "<your_storage_connection_string>",
    "projections": [
      {
        "tables": [
          {
            "tableName": "reshapedDataTable",
            "inputs": [
              {
                "name": "url",
                "source": "/document/url"
              },
              {
                "name": "sentiment",
                "source": "/document/sentiment"
              },
              {
                "name": "key_phrases",
                "source": "/document/merged_content/keyphrases/*"
              }
            ]
          }
        ],
        "objects": [
          {
            "objectName": "reshapedKeyPhrasesObject",
            "inputs": [
              {
                "name": "key_phrases",
                "source": "/document/merged_content/keyphrases/*"
              }
            ]
          }
        ]
      }
    ]
  }
}
